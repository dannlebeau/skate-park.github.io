      <form onsubmit="event.preventDefault();">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input
              class="form-control m-auto"
              disabled
              value='{{email}}'
              id='email'
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input 
              class="form-control m-auto" 
              value='{{nombre}}' 
              id='nombre'
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control m-auto"
              value='{{password}}'
              id='password'
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="password">Repita la password</label>
            <input
              type="password"
              class="form-control m-auto"
              value='{{password}}'
              id='password-2'
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input 
              class="form-control m-auto" 
              value='{{anos_experiencia}}' 
              id='anios'
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input 
              class="form-control m-auto" 
              value='{{especialidad}}' 
              id='especialidad'
            />
          </div>
        </div>
        <div class="mb-1">
          <button class="btn btn-primary"
            onclick='editarDatos()'
          >Actualizar</button>
        </div>
        <div>
          <button class="btn btn-danger"
            onclick='eliminarCuenta()'
          >Eliminar cuenta</button>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>

  let email = document.getElementById('email');
  let nombre = document.getElementById('nombre');
  let password = document.getElementById('password');
  let password_2 = document.getElementById('password-2');
  let anios = document.getElementById('anios');
  let especialidad = document.getElementById('especialidad');

  const editarDatos = async () => {

    if (password.value !== password_2.value) {
      alert('Los contraseñas no coinciden')

    } else {
      let payload = {
      email: email.value,
      nombre: nombre.value,
      password: password.value,
      anios: anios.value,
      especialidad: especialidad.value,
      }

      try {
        await axios.put('http://localhost:3000/datos_perfil',payload)
        .then(() => {
          alert('Datos actualizados con éxito')
        })
      
      } catch ({ response }) {
        const { data } = response
        const { error } = data
        alert(error)
      }
    } 
  }

  const eliminarCuenta = async () => {
    await axios.delete(`http://localhost:3000/eliminar_cuenta/${email.value}`)
    .then(() => {
        alert('Cuenta eliminada con éxito')

        window.location.href = `http://localhost:3000/login`
      })
  }
</script>
